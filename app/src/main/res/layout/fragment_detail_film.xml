<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/key"
    tools:context=".ui.fragments.detail.DetailFilmFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#33484848"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#33484848">
            <ImageView
                android:id="@+id/item_detail_image"
                android:layout_width="200dp"
                android:layout_height="250dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_detail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                tools:text="NAME"
                android:textColor="@color/teal_200"
                android:textSize="23sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toRightOf="@id/item_detail_image"
                app:layout_constraintTop_toBottomOf="@id/item_detail_image" />

            <TextView
                android:id="@+id/item_detail_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textColor="@color/teal_200"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_detail_text"
                tools:ignore="MissingConstraints"
                tools:text="Description" />

            <TextView
                android:id="@+id/item_detail_species"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:ellipsize="end"
                android:lines="1"
                tools:text="Human"
                android:textColor="@color/teal_200"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@id/item_detail_image"
                app:layout_constraintTop_toBottomOf="@id/text_last_location" />

            <TextView
                android:id="@+id/text_last_location"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="2002"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/teal_200"
                android:textSize="25sp"
                app:layout_constraintLeft_toRightOf="@id/item_detail_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_last_location"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/teal_200"
                android:textSize="18sp"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_detail_description"
                tools:text="location" />

            <TextView
                android:id="@+id/item_first_seen_in"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:ellipsize="end"
                android:lines="1"
                android:paddingBottom="5dp"
                android:layout_marginStart="15dp"
                android:textColor="@color/teal_200"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@id/item_detail_image"
                app:layout_constraintTop_toBottomOf="@+id/item_detail_species"
                tools:text="Character successes" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
